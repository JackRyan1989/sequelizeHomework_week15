<div class="container">

    <div>
        <h1 class="text-center mx-auto">Welcome to EAT-DA-BURGER</h1>
        <h3>The only place on the internet where you can create a burger and then virtually eat it!</h3>
    </div>
    <div class="row">
        <div id="eaten" class="col-lg-3 mx-auto">
            <div>
                <h3>These Burgs Are Eaten!</h3>
                {{#each burger}}
                {{#if devoured}}
                <div class="my-2">
                    <p><span class="label"><strong>ID:</strong></span> {{this.id}}</p>
                    <p><span class="label"><strong>Burger Name:</strong></span> {{this.burgerName}}</p>
                    <p><span class="label"><strong>Devoured?</strong></span> {{this.devoured}}</p>
                </div>
                {{/if}}
                {{/each}}
            </div>
        </div>
        <div id='burgImg' class="col-lg-3 mx-auto">
            <img src="/assets/img/burgerIllustration.jpeg" class="w-75">
        </div>
        <div id="unEaten" class="col-lg-3 mx-auto">
            <div>
                <h3>Eat These Burgs!</h3>
                {{#each burger}}
                {{#unless devoured}}
                <div class="my-2">
                    <p><span class="label"><strong>ID:</strong></span> {{this.id}}</p>
                    <p><span class="label"><strong>Burger Name:</strong></span> {{this.burgerName}}</p>
                    <p><span class="label"><strong>Devoured?</strong></span> {{this.devoured}}</p>
                    <button class="eatBurger btn btn-danger rounded" data-id="{{this.id}}">EAT DIS BURGER</button>
                </div>
                {{/unless}}
                {{/each}}
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-4 mx-auto">
            <form class="create-form" id="newBurg">
                <div class="form-group">
                    <label for="bn"><strong>Burger Name:</strong></label>
                    <input type="text" id="bn" name="name">
                </div>
                <button id="addBurg" type="submit" class="btn btn-primary mb-2">Add Burger!</button>
            </form>
        </div>
    </div>
</div>